{
  "aggs": {
    "request": {
      "aggregations": {
        "#type": "as_list",
        "values": {
          "#type": "fallback",
          "strategies": [
            "$.request.aggregations",
            {
              "#type": "require",
              "require": "$.request[?(!(@.ids))]",
              "value": [
                "group"
              ]
            }
          ]
        }
      },
      "size": 0,
      "timeout": "60s"
    },
    "cache": {
      "name": "slow-cache"
    }
  },
  "results": {
    "request": {
      "query": "$.query",
      "aggregations": "$.aggregations",
      "from": "$.from",
      "size": "$.size",
      "sort": "$.sort"
    },
    "cache": {
      "name": "fast-cache"
    }
  }
}
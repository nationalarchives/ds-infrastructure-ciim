{
  "results": {
    "request": {
      "query": "$.query",
      "aggregations": {
        "#type": "to_map",
        "entries": {
          "#type": "for_each",
          "values": {
            "#type": "entries",
            "map": "$.aggregations",
            "key": "name",
            "value": "agg"
          },
          "spec": {
            "name": "$.name",
            "agg": {
              "#type": "merge",
              "values": [
                "$.agg",
                {
                  "#type": "if",
                  "condition": {
                    "#type": "exists",
                    "path": "$.agg.terms"
                  },
                  "then": {
                    "terms": {
                      "#type": "merge",
                      "values": [
                        "$.agg.terms",
                        { "min_doc_count": 0 }
                      ]
                    }
                  },
                  "else": "$.agg"
                }
              ]
            }
          }
        },
        "key": "name",
        "value": "agg"
      },
      "from": "$.from",
      "size": "$.size",
      "sort": "$.sort"
    },
    "cache": {
      "name": "fast-cache"
    }
  },
  "aggs": {
    "request": {
      "query": {
        "bool": {
          "must": "$.query.bool.must"
        }
      },
      "aggregations": {
        "group": {
          "terms": {
            "field": "@datatype.group.value",
            "size": "50",
            "min_doc_count": 0
          }
        }
      },
      "size": 0,
      "timeout": "60s"
    },
    "cache": {
      "name": "slow-cache"
    }
  }
}

{
  "search_url":"http://aba8bbc248c7248429b60b3fcbfde942-e6a006db0770fe4b.elb.eu-west-2.amazonaws.com/public/_search",
  "type_registry":{
    "es_query":{
      "#type":"http_request",
      "url":"{%.search_url}",
      "method":"POST",
      "headers":{
        "Content-Type":"application/json",
        "Authorization": "Basic ZWxhc3RpYzo2dFZoSDRvR0syM1RVODk1UGZhMDRCOEs="
      },
      "body":{
        "query":{
          "query_string":{
            "query":"{&.query}"
          }
        },
        "sort": [
          {
            "@sort.keyword": {
              "order": "asc"
            }
          }
        ],
        "_source":{
          "includes":[
            "@processed"
          ]
        }
      },
      "allow":200,
      "require_allowed":true,
      "require_response":true
    },
    "thumbnail": {
      "#type": "require_catch",
      "value": [
        {
          "#type": "require_throw",
          "value": {
            "#type": "scope",
            "scope": {
              "#type": "artifact",
              "artifact": {
                "#type": "fallback",
                "strategies": [
                  {
                    "#type": "require",
                    "require": "$.thumbnail[?(@.value =~ /.*stitched.*/i)]",
                    "value": "large"
                  },
                  {
                    "#type": "require",
                    "require": "[C]$.@processed.preview.measurements.dimensions[?(@.dimension == 'width')][?(@.value < {%.preview_mid_threshold})]",
                    "value": "mid"
                  },
                  {
                    "#type": "require",
                    "require": "[C]$.@processed.preview.measurements.dimensions[?(@.dimension == 'height')][?(@.value < {%.preview_mid_threshold})]",
                    "value": "mid"
                  },
                  "preview"
                ]
              }
            },
            "value": {
              "type": "image",
              "id": "{[R]%.base_url.media}{[R]$.location}",
              "format": "$.format",
              "width": "$.width",
              "height": "$.height"
            }
          }
        }
      ]
    }
  }
}
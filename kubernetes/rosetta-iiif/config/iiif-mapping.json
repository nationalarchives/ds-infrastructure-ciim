{
  "#type": "scope",
  "scope": "$.source",
  "value": {
    "id": "$.@admin.id",
    "type": "manifest",
    "label": "$.summary.title",
    "summary": "$.description[0].value",
    "items": {
      "#type": "as_list",
      "values": {
        "#type": "for_each",
        "values": "$.multimedia",
        "spec": {
          "#type": "fallback",
          "strategies": [
            {
              "#type": "scope",
              "scope": {
                "#type": "es_query",
                "query": "group.@admin.uuid:{$.@admin.uuid}"
              },
              "value": {
                "#type": "scope",
                "scope": "$.hits.hits[0]._source",
                "value": {
                  "name": "zoom",
                  "location": "[R]$.original.location",
                  "height": "[R]$.original.measurements.dimensions[?(@.dimension == 'height')].value",
                  "width": "[R]$.original.measurements.dimensions[?(@.dimension == 'width')].value",
                  "info_path": {
                    "#type": "literal",
                    "value": "/{location}"
                  }
                }
              }
            },
            {
              "type": "canvas",
              "artifact": {
                "name": "zoom",
                "location": "testlocation",
                "height": "200",
                "width": "100"
              }
            }
          ]
        }
      }
    }
  }
}
{
  "#type": "scope",
  "scope": "$.source",
  "value": {
    "id": "$.@admin.id",
    "type": "manifest",
    "label": "$.summary.title",
    "summary": "$.description[0].value",
    "items": {
      "#type": "as_list",
      "values": {
        "#type": "flatten",
        "values": [
          "$.multimedia",
          {
            "#type": "scope",
            "scope": {
              "#type": "es_query",
              "query": "group.@admin.uuid:{$.@admin.uuid}"
            },
            "values": "$.hits.hits[*]._source",
            "value": {
              "type": "canvas",
              "name": "zoom",
              "location": "[R]$.@processed.original.location",
              "height": "[R]$.@processed.original.measurements.dimensions[?(@.dimension == 'height')].value",
              "width": "[R]$.@processed.original.measurements.dimensions[?(@.dimension == 'width')].value"
            }
          }
        ]
      }
    }
  }
}
{
  "#type": "merge",
  "depth": -1,
  "values": [
    "$",
    {
      "results": {
        "request": {
          "highlight": {
            "#type": "literal",
            "value": {
              "pre_tags": [
                "<mark>"
              ],
              "post_tags": [
                "</mark>"
              ],
              "number_of_fragments": 1,
              "fields": {
                "name.value": {
                  "fragment_size": "${params.name_size}",
                  "number_of_fragments": 1
                },
                "identifier.__reference_number": {
                  "fragment_size": "${params.identifier_size}",
                  "number_of_fragments": 1
                },
                "title.value.keyword": {
                  "fragment_size": "${params.title_size}",
                  "number_of_fragments": 1
                },
                "summary.title":{
                  "fragment_size": "${params.summary_size}",
                  "number_of_fragments": 1
                },
                "description.raw": {
                  "fragment_size": "${params.description_raw_size}",
                  "number_of_fragments": 1
                },
                "description.value": {
                  "fragment_size": "${params.description_size}",
                  "number_of_fragments": 1
                }
              }
            }
          }
        }
      }
    }
  ]
}